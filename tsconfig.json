{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src",
    "./src/bridge/fiat-bridge/unsaturated_solinas",
    "./src/bridge/fiat-bridge/word_by_word_montgomery",
    "./src/bridge/fiat-bridge/fiat.c",
    "./src/bridge/fiat-bridge/fiat.h",
    "./src/bridge/bitcoin-core-bridge/Makefile",
    "./src/bridge/bitcoin-core-bridge/llvm2cryptopt.sed",
    "./src/bridge/bitcoin-core-bridge/*.h",
    "./src/bridge/bitcoin-core-bridge/*.c",
    "./src/bridge/bitcoin-core-bridge/*.json"
  ],
  "exclude": ["./node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true
  },
  "filePermissions": {
    "./dist/CryptOpt.js": "0700",
    "./dist/BetAndRun.js": "0700"
  },
  "hooks": ["copy-files", "file-permissions"]
}

